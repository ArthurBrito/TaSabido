<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="br.ufc.engsoftware.tasabido.VerMonitoriaActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/ver_monitoria_label_textsize"
            android:text="Titulo:"/>

        <TextView
            android:id="@+id/tv_titulo_monitoria"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textSize="@dimen/ver_monitoria_value_textsize"
            android:text="Monitoria Teste Thiago"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:textSize="@dimen/ver_monitoria_label_textsize"
            android:text="Descrição:"/>

        <TextView
            android:id="@+id/tv_descricao_monitoria"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textSize="@dimen/ver_monitoria_value_textsize"
            android:text="Quero dar monitoria de Calculo 2 pois acredito que é uma matéria que a maioria dos alunos sentem dificuldade."/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:textSize="@dimen/ver_monitoria_label_textsize"
            android:text="Data:"/>

        <TextView
            android:id="@+id/tv_data_monitoria"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textSize="@dimen/ver_monitoria_value_textsize"
            android:text="Segunda - 08:00 as 10:00 h"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:textSize="@dimen/ver_monitoria_label_textsize"
            android:text="Local:"/>

        <TextView
            android:id="@+id/tv_local_monitoria"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textSize="@dimen/ver_monitoria_value_textsize"
            android:text="Biblioteca Central"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:textSize="@dimen/ver_monitoria_label_textsize"
            android:text="Monitor:"/>

        <TextView
            android:id="@+id/tv_monitor_monitoria"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textSize="@dimen/ver_monitoria_value_textsize"
            android:text="thiago_nrodrigues"/>

        <!-- Botão Deletar Monitoria -->
        <Button
            android:layout_width="150dp"
            android:id="@+id/btn_delete"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/btn_deletar_monitoria"
            android:onClick="onClickDeletarMonitoria"/>


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_gravity="center"
            android:id="@+id/btn_participar"
            android:text="@string/btn_participar_monitoria"
            android:onClick="onClickParticiparMonitoria"/>

    </LinearLayout>

</ScrollView>
