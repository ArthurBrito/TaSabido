<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Pode deletar, feito só para o layout não ficar vazio -->

        <br.ufc.engsoftware.views.RoundedImageView
            android:id="@+id/riv_foto_usuario"
            android:layout_width="120dp"
            android:layout_height="120dp" />

        <TextView
            android:id="@+id/tv_nome_usuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome usuário"
            android:textSize="23sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="23sp"
            android:id="@+id/tv_email_usuario" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="23sp"
            android:id="@+id/qt_moedas" />

</LinearLayout>